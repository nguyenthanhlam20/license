@using ViewModels.Accounts
@using ViewModels
@using WebClient.Helpers
@model AccountVM

<div class="pagetitle">
    <h1>Tạo mới người dùng</h1>
</div><!-- End Page Title -->

<div class="row mb-2">
    <div class="col-sm-12 col-lg-8 m-auto">
        <div class="card p-3">
            <div class="row">
                <form method="POST" asp-area="Admin" asp-controller="User" asp-action="Create" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label class="col-sm-12 fw-bold">Fullname<span class="ms-1 text-red">*</span></label>
                        <div class="col-sm-12">
                            <input asp-for="Fullname" name="Fullname" type="text" class="form-control" placeholder="Nhập tên đầy đủ" />
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-12 fw-bold">Email<span class="ms-1 text-red">*</span></label>
                        <div class="col-sm-12">
                            <input asp-for="Email" name="Email" type="text" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-12 fw-bold">Trạng thái hoạt động<span class="ms-1 text-red">*</span></label>
                        <div class="row">
                            <div class="col-sm-12 col-lg-4">
                                <div class="form-check">
                                    <input value="true" @(Model == null ? "checked" : Model.IsAccountActive == true ? "checked" : "") asp-for="IsAccountActive" name="IsAccountActive" class="form-check-input" type="radio">
                                    <label class="form-check-label">
                                        Đang hoạt động
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-12 col-lg-4">
                                <div class="form-check">
                                    <input value="false" @(Model == null ? "" : Model.IsAccountActive == false ? "checked" : "") asp-for="IsAccountActive" name="IsAccountActive" class="form-check-input" type="radio">
                                    <label class="form-check-label">
                                        Ngừng hoạt động
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-12 d-flex flex-row justify-content-start">
                            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                <span>Trở về</span>
                            </a>
                            <button onclick="showSpinner();" type="submit" class="btn btn-primary mx-2">
                                <span id="spinner" class="visually-hidden">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="visually-hidden">Loading...</span>
                                    <span>Đang xử lý</span>
                                </span>
                                <span id="btn-content">
                                    <i class="bi bi-floppy"></i>
                                    <span>Lưu</span>
                                </span>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
